{% extends 'base.html.twig' %}

{% block body %}

    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="https://img.freepik.com/free-photo/high-angle-man-reading-digital-magazine_23-2150162654.jpg?t=st=1709306127~exp=1709309727~hmac=a1ebd867bc6e4ad60532caf321b15ff14231b215c4a81ec257c9957b24c418b6&w=826"
                                     alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <form method="post">
                                        <h5 class="fw-normal mb-5 pb-3" style="letter-spacing: 1px;">Sign in your account</h5>
                                        {% if error %}
                                            <div class="alert alert-danger" role="alert">
                                                {{ error.messageKey|trans(error.messageData, 'security') }}
                                            </div>
                                        {% endif %}
                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="inputEmail">Email address</label>
                                            <input type="email" value="{{ last_username }}" required id="inputEmail" name="email" placeholder="Enter your email" class="form-control form-control-lg" />
                                        </div>

                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="inputPassword">Password</label>
                                            <input type="password" name="password" autocomplete="current-password" required id="inputPassword" placeholder="Enter your password" class="form-control form-control-lg" />
                                        </div>

                                        <div class="pt-1 mb-4">
                                            <button class="btn btn-dark w-75 mx-auto btn-lg btn-block" name="login-btn" value="login" type="submit">Login</button>
                                        </div>

                                        <a class="small text-muted" href="#!">Forgot password?</a>
                                        <p class="mb-5 pb-lg-2" style="color: #393f81;">Don't have an account?
                                            <a href="{{ path('app_register') }}" style="color: #393f81;">Register here</a>
                                        </p>
                                        <input type="hidden" name="_csrf_token"
                                               value="{{ csrf_token('authenticate') }}">
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
